<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPreference">
        <attr name="itemLayout" format="reference" />
        <attr name="choices" format="reference" />
        <attr name="numColumns" format="integer" />
        <attr name="color_type" format="enum">
            <enum name="primary" value="0"/>
            <enum name="accent" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="LineColorPicker">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="colors" format="reference" />
        <attr name="selectedColorIndex" format="integer" />
    </declare-styleable>
    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0"/>
            <enum name="follow" value="1"/>
            <enum name="drag" value="2"/>
        </attr>
        <attr name="give">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="3"/>
        </attr>
        <attr name="header" format="reference"/>
        <attr name="footer" format="reference"/>
    </declare-styleable>
</resources>
