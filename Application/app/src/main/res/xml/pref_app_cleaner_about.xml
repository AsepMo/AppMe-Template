<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:persistent="false"
    android:title="@string/action_app_cleaner_about">

    <PreferenceCategory android:title="@string/action_about">

        <Preference
            android:summary="@string/app_author_name"
            android:title="@string/app_author">

        <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/app_authors_url" />

        </Preference>

        <Preference
            android:key="version"
            android:title="@string/app_version_number" />

        <Preference
            android:key="licences"
            android:title="@string/app_open_source_licences" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/app_special_thanks">

        <Preference
            android:summary="@string/app_graphics_desc"
            android:title="@string/app_graphics">

        <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/app_graphics_url" />

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
