<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true">
		
		<com.appme.story.engine.widget.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_0"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			app:step_index="1"
			app:step_title="Step 1.Check Status"
			app:step_summary="CHECK STATUS Mode"
			app:step_summary_done="CHECK STATUS Mode. Done"
			app:step_state="selected">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<com.appme.story.engine.widget.LoadingView
						android:id="@+id/check_root"
						android:layout_width="match_parent"
						android:layout_height="100dp"/>
						
				</LinearLayout>

			</LinearLayout>

		</com.appme.story.engine.widget.stepperview.VerticalStepperItemView>

		<com.appme.story.engine.widget.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:step_index="2"
			app:step_title="Step 2.Installation"
			app:step_summary="INSTALLATION Mode"
			app:step_summary_done="INSTALLATION Mode. Done">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

                    <com.appme.story.engine.widget.LoadingView
                        android:id="@+id/installation"
                        android:layout_width="match_parent"
						android:layout_height="100dp"/>
                    
				</LinearLayout>

			</LinearLayout>

		</com.appme.story.engine.widget.stepperview.VerticalStepperItemView>

		<com.appme.story.engine.widget.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:step_index="3"
			app:step_title="Step 3.Syncron Data"
			app:step_summary="SYNCRONITATION Mode"
			app:step_summary_done="SYNCRONITATION Mode. Done">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

				    <com.appme.story.engine.widget.LoadingView
                        android:id="@+id/syncronized"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>
                    
				</LinearLayout>

			</LinearLayout>

		</com.appme.story.engine.widget.stepperview.VerticalStepperItemView>

		<com.appme.story.engine.widget.stepperview.VerticalStepperItemView
			android:id="@+id/stepper_3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:step_index="4"
			app:step_title="Step 4.Start Activity"
			app:step_summary="START ACTIVITY Mode"
			app:step_summary_done="START ACTIVITY Mode. Done"
			app:step_is_last="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

                    <com.appme.story.engine.widget.LoadingView
                        android:id="@+id/start_activity"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>
                    
				</LinearLayout>

			</LinearLayout>

		</com.appme.story.engine.widget.stepperview.VerticalStepperItemView>

	</LinearLayout>

</android.support.v4.widget.NestedScrollView>

