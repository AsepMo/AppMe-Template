<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:gravity="center_vertical"
	android:background="@color/colorPrimary"
	android:layout_width="fill_parent"
	android:layout_height="58.0dip"
	android:layout_alignParentTop="true"
	android:layout_alignParentBottom="true"
	android:id="@+id/header_drawer">

	<LinearLayout
		android:id="@+id/header_deawer_layout"
		android:orientation="vertical"
		android:paddingLeft="2.0dip"
		android:paddingTop="5.0dip"
		android:paddingBottom="4.0dip"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_toLeftOf="@+id/header_drawer_menu"
		android:layout_centerVertical="true"
		android:layout_marginStart="16.0dip">

		<TextView
			android:id="@+id/header_drawer_title"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:text="@string/app_name"
			android:textSize="16.0sp"
			android:textStyle="bold"
			android:textColor="#ffffffff"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:shadowColor="#ff000000"
			android:shadowDx="1.0"
			android:shadowDy="2.0"
			android:shadowRadius="8.0"
			android:fontFamily="sans-serif-light"/>

		<TextView
			android:id="@+id/header_drawer_subtitle"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:text="The Best Of App Manager"
			android:textSize="12.0sp"
			android:textColor="@color/md_light_green_A400"
			android:textAllCaps="false"
			android:singleLine="true"
			android:clickable="true"
			android:ellipsize="end"
			android:paddingTop="1.0dip"
			android:foreground="@drawable/foreground_selector"
			android:fontFamily="sans-serif-light"/>

	</LinearLayout>

	<ImageView
		android:id="@+id/header_drawer_menu"
		android:padding="5.0dip"
		android:paddingRight="4.0dip"
		android:layout_width="@android:dimen/app_icon_size"
		android:layout_height="@android:dimen/app_icon_size"
		android:src="@mipmap/ic_launcher"
		android:tint="@android:color/transparent"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:maxHeight="38dp"/>

</RelativeLayout>

