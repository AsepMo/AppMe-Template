<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:showIn="@layout/activity_application">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:elevation="10dp"
		android:background="@color/colorPrimary"
		app:theme="?attr/actionBarTheme"
		app:popupTheme="?attr/actionBarPopupTheme">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="start"
			android:paddingLeft="10dip"
			android:paddingRight="10dip">

			<TextView
				android:id="@+id/app_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:paddingTop="5dip"
				android:textColor="#ffffff"
				android:textSize="28sp"
				android:textStyle="bold"
				android:shadowColor="#000000"
				android:shadowDx="1"
				android:shadowDy="2"
				android:shadowRadius="8"/>

		</LinearLayout>

	</android.support.v7.widget.Toolbar>

	<android.support.design.widget.CoordinatorLayout
		android:id="@+id/content_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:orientation="horizontal"
				android:padding="10dp"
				android:id="@+id/header_app_installer">

				<ImageView
					android:id="@+id/app_icon"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_gravity="center"
					android:scaleType="fitCenter"
					android:src="@drawable/apk_v2"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginLeft="16dp">

					<TextView
						android:id="@+id/app_name"
						style="@style/AppMe.labelStyle2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:textSize="15sp"
						android:textStyle="bold"
						android:text="Title"/>

					<TextView
						android:id="@+id/package_name"
						style="@style/AppMe.labelStyle2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:text="PackageName :"/>

					<TextView
						android:id="@+id/version_name"
						style="@style/AppMe.labelStyle2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:text="VersionName :"/>

					<TextView
						android:id="@+id/version_code"
						style="@style/AppMe.labelStyle2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:text="VersionCode :"/>

					<TextView
						android:id="@+id/author"
						style="@style/AppMe.labelStyle2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						android:text="Author :"/>

				</LinearLayout>

			</LinearLayout>

			<FrameLayout
				android:id="@+id/content_frame"
				android:layout_below="@id/header_app_installer"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"/>

		</RelativeLayout>

	</android.support.design.widget.CoordinatorLayout>

</LinearLayout>

